<!DOCTYPE html>
<html>
<head>
    <title>Show Orders</title>
    <!-- Include Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .custom-container {
            max-width: 2000px; /* Set the desired width in pixels or any other valid CSS unit */
        }
    </style>
</head>
<body>
    <%- include('../partials/navlogged') %>
    <div class="container custom-container">
        <div class="text-center">
            <h1 class="mt-5">Show Orders</h1><br><br>
        </div>
        <div class="table-responsive table-responsive-xxl">
            <table class="table table-bordered table-lg">
                <thead class="thead-light">
                    <tr>
                        <th>Order ID</th>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Delivery type</th>
                        <th>Deliveryman Name</th>
                        <th>Deliveryman Phone</th>
                        <th>Pizza Name</th>
                        <th>Topping Name</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Date and Time</th>
                        <th>Address</th>
                        <th>Branch Name</th>
                        <th>Status</th>
                        <th>Review</th>
                    </tr>
                </thead>
                <tbody>
                    <% results.forEach(result => { %>
                        <tr>
                            <td><%= result.orderid %></td>
                            <td><%= result.customerid %></td>
                            <td><%= result.firstname %> <%= result.lastname %></td>
                            <td><%= result.type %></td>
                            <td><%= result.name %></td>
                            <td><%= result.phone %></td>
                            <td><%= result.pizzaname %></td>
                            <td><%= result.toppingname %></td>
                            <td><%= result.quantity %></td>
                            <td><%= result.total %></td>
                            <td><%= result.datetime %></td>
                            <td><%= result.address %></td>
                            <td><%= result.branchname %></td>
                            <td><%= result.status_text %></td>
                            <% if (result.rating === null) { %>
                                <td>
                                    <form action="/user/review" method="POST">
                                        <input type="hidden" id="orderid" name="orderid" value="<%= result.orderid %>">
                                        <button type="submit" class="btn btn-success">Review</button>
                                    </form>
                                </td>
                            <% } else { %>
                                <td>Review submitted</td>
                            <% } %>
                        </tr>
                    <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>

    <!-- Include Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
